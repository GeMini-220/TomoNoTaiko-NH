[sub_resource type="GDScript" id="GDScript_8t52h"]
script/source = "extends HSlider

@export var bus_name: String
var bus_index: int

func _ready() -> void:
	# Finds index of Master volume, changes db when slider changes
	bus_index = AudioServer.get_bus_index(bus_name)
	value_changed.connect(_on_value_changed)
	
	value = db_to_linear(AudioServer.get_bus_volume_db(bus_index))

func _on_value_changed(value: float) -> void:
	# When slider changes, sets AudioServer Master volume
	AudioServer.set_bus_volume_db(bus_index, linear_to_db(value))
	Global.AudioPlayer.stream = preload(\"res://Assets/SFX/TNTNH Menu Button Select.wav\")
	Global.AudioPlayer.play()
"

